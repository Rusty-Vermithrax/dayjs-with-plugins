{
  "extends": ["eslint:recommended"],
  "env": {
    "node": false,
    "browser": true,
    "amd": true,
    "es6": true,
    "commonjs": true
  },
  "plugins": ["compat"],
  "rules": {
    "compat/compat": "error",
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-empty": "off",
    "no-redeclare": "off",
    "no-control-regex": "off",
    "no-useless-escape": "off"
  },
  "settings": {
    "polyfills": [
      "Promise"
    ]
  }
}
